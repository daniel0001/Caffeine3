<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:screenOrientation="portrait"
                android:weightSum="1"
                tools:context="practice.Caffeine.RedeemCoffeeActivity">

    <TextView
        android:id="@+id/tvClickBelowToView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="@string/click_above"
        />

    <ImageView
        android:id="@+id/ivNineCupsWide"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_below="@id/tvClickBelowToView"
        android:layout_centerHorizontal="true"
        android:clickable="true"
        app:srcCompat="@drawable/cup_grey_grid_heart_9_wide"/>

    <TextView
        android:id="@+id/tvShopName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivNineCupsWide"
        android:layout_centerHorizontal="true"
        android:text="shop name"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/tvShopAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvShopName"
        android:layout_centerHorizontal="true"
        android:text="Shop Address"
        android:textAlignment="center"
        android:textSize="14sp"
        />

    <ImageView
        android:id="@+id/ivBigHeartCup"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tvShopAddress"
        android:contentDescription="BigYellowCup"
        app:srcCompat="@drawable/cup_yellow_heart_big"/>
    <Button
        android:id="@+id/bBaristaButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivBigHeartCup"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/red"
        android:text="@string/barista_button"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/tvBaristaInstructions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bBaristaButton"
        android:layout_centerHorizontal="true"
        android:text="@string/barista_instructions"
        android:textAlignment="center"
        android:textStyle="bold"/>


</RelativeLayout>
