<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <TextView
        android:id="@+id/listTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="@string/tv_list_title"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/tvShopName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/listTitle"
        android:layout_centerHorizontal="true"
        android:paddingBottom="10sp"
        android:paddingEnd="10sp"
        android:paddingStart="10sp"
        android:paddingTop="2sp"
        android:text="shop name"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvDateColumn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvShopName"
        android:layout_centerHorizontal="true"
        android:text="Date of Loyalty Point Collected" />

    <ListView
        android:id="@+id/visitListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tvDateColumn"
        android:scrollbars="vertical" />

</RelativeLayout>